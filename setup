if [ -f $HOME/AUTO_RECOIL/PGTOOL ]; then
chmod +x $HOME/AUTO_RECOIL/PGTOOL
mv $HOME/AUTO_RECOIL/PGTOOL $PREFIX/bin
fi

function mainfps() {
cd AUTO_RECOIL
chmod +x NO_RECOIL
./NO_RECOIL
}

URL="https://t.me/+vKozX3IZmEQ5MWE9"

open_url() {
    if command -v xdg-open &> /dev/null; then
        # For Linux systems
        xdg-open "$URL"
    elif command -v gnome-open &> /dev/null; then
        # For older GNOME systems
        gnome-open "$URL"
    elif command -v open &> /dev/null; then
        # For macOS
        open "$URL"
    else
        echo "No suitable command found to open the URL."
        exit 1
    fi
}

function menu() {
  toilet -f term -F gay "[1] ğ—¡ğ—¢_ğ—¥ğ—˜ğ—–ğ—¢ğ—œğ—Ÿ"
  toilet -f term -F gay "[2] ğ—§ğ—š ğ—–ğ—›ğ—˜ğ—¡ğ—¡ğ—”ğ—Ÿ"
  toilet -f term -F gay "[3] Quit"
}
