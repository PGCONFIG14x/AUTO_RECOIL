while true; do
  menu
  read -p "Please choose: " choice
  case $choice in
    1)
      mainfps
      ;;
    2)
     open_url
    ;;
    3)
      exit 0
      ;;
    *)
      echo "Invalid option. Try again."
      ;;
  esac
  clear 
  banner 
done